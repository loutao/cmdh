<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/F0grey"
    tools:context="com.njucm.cmdh.app.activitys.HealthSuggestionExpand">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:text="我们为不同体质 性别 工作的人设计了不同的健康建议，请认真填写。"
        android:textColor="@color/grey_font4"
        android:lineSpacingMultiplier="1.4"
        android:textSize="@dimen/sp_16">

    </TextView>
    <!--最上面的线条-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_03"
        android:background="@color/grey_font4"
        android:layout_marginTop="@dimen/dp_60"
        android:id="@+id/label0"
        />
    <!--最左边的边框-->
    <View
        android:layout_width="@dimen/dp_03"
        android:layout_height="302dp"
        android:background="@color/grey_font4"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_60"
        >
    </View>
    <!--最右边的边框-->
    <View
        android:layout_width="@dimen/dp_03"
        android:layout_height="302dp"
        android:background="@color/grey_font4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_60">
    </View>
    <!--是否本人选项，是本人就可以存储一些用户信息-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/label0"
        android:id="@+id/isself">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否本人"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/fou"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:text="否"/>
        <com.cengalabs.flatui.views.FlatToggleButton
            android:layout_width="80dp"
            android:layout_height="45dp"
            flatui:fl_theme="@array/grass"
            android:layout_toLeftOf="@+id/fou"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/toggbtn1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/toggbtn1"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:text="是"/>


    </RelativeLayout>
    <View
        android:id="@+id/label1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_03"
        android:background="@color/grey_font4"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/isself"
        />
    <!--被查人的性别-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/label1"
        android:id="@+id/sexlabel">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:id="@+id/radiogroup"
            android:layout_height="wrap_content">
            <com.cengalabs.flatui.views.FlatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                flatui:fl_theme="@array/grass"
                android:text="女"
                android:id="@+id/radiofemale"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                flatui:fl_size="20dip"
                android:layout_marginRight="@dimen/dp_10"
                />
            <com.cengalabs.flatui.views.FlatRadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="男"
                flatui:fl_theme="@array/grass"
                android:layout_toLeftOf="@id/radiofemale"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                flatui:fl_size="20dip"
                />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>


    </RelativeLayout>
    <View
        android:id="@+id/label2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_03"
        android:background="@color/grey_font4"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/sexlabel"
    />
    <RelativeLayout
        android:id="@+id/cons"
        android:layout_width="fill_parent"
        android:layout_below="@id/label2"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="体质"/>
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/angle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            app:fa_icon="fa-angle-right"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/conschoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="点击设置"
            android:layout_toLeftOf="@id/angle_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/grey_font2"/>

    </RelativeLayout>
    <View
        android:id="@+id/label3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_03"
        android:background="@color/grey_font4"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/cons"
        />
    <RelativeLayout
        android:id="@+id/jobblock"
        android:layout_below="@id/label3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="工作"/>
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/angle_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            app:fa_icon="fa-angle-right"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/workchoioce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="点击设置"
            android:layout_toLeftOf="@id/angle_right2"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/grey_font2"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/jobblock"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_03"
        android:background="@color/grey_font4"
        android:layout_marginTop="@dimen/dp_10"
        />
    </RelativeLayout>

</RelativeLayout>
