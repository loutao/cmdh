<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njucm.cmdh.app.activitys.HealthSuggestionExpand2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommendid"
        android:visibility="gone"
        android:textSize="0.0000000001sp"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadeScrollbars="true">
        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picback"
            android:layout_alignParentTop="true"
            android:background="@drawable/picback">
            <in.srain.cube.image.CubeImageView
                android:layout_width="230dp"
                android:layout_height="176dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/pic"
                android:padding="@dimen/dp_3"
                android:background="@drawable/image_border"
                android:src="@drawable/danggui"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当归牛肉汤"
                android:layout_centerHorizontal="true"
                android:id="@+id/name"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_alignParentBottom="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/name"
                android:background="@drawable/round_corner"
                android:id="@+id/li1"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_2">
                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:layout_width="wrap_content"
                    android:id="@+id/heart"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    app:fa_icon="fa-heart-o"
                    android:textColor="@color/blue_light"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/collectornot"
                    android:text="收藏"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/picback"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/block1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适宜"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_2"
                android:id="@+id/shiyi"
                android:background="@drawable/thumb_heart_round_corner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/constitution"
                android:layout_toRightOf="@id/shiyi"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="气虚质"
                android:layout_alignBottom="@id/shiyi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" “  "
                android:id="@+id/yinhao"
                android:textColor="@color/grey_font4"
                android:layout_below="@id/constitution"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/sp_30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maintext"
                android:layout_below="@id/yinhao"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/grey_font4"/>

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_below="@+id/maintext"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/grey_font4"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block1"
            android:layout_margin="@dimen/dp_10">
            <!---->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_margin="@dimen/dp_2"
                android:id="@+id/qita"
                android:background="@drawable/thumb_heart_round_corner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/others"
                android:layout_toRightOf="@id/qita"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_alignBottom="@id/qita"
                android:text="食物"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" “  "
                android:id="@+id/yinhao2"
                android:textColor="@color/grey_font4"
                android:layout_below="@id/others"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/sp_30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maintext2"
                android:layout_below="@id/yinhao2"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/grey_font4"/>
        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
