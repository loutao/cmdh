<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >
    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的体质辨识结果："
        android:textColor="#CFB53B"
        android:textSize="20sp" />
    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#FF909090"
        android:layout_below="@+id/result_title"
        />
        <ScrollView
            android:id="@+id/scView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            android:layout_below="@+id/line"
            android:layout_above="@+id/advice"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/container_of_myconstitution"
                    android:layout_width="800dp"
                    android:layout_height="600dp"
                    tools:context="lecho.lib.hellocharts.samples.ColumnChartActivity"
                    tools:ignore="MergeRootFrame" >
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/container_of_myconstitution">

                    <TextView
                        android:id="@+id/result1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/result2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                        />
                    <TextView
                        android:id="@+id/result3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/what_is"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#CFB53B"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:text="" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_considentyline_height"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:id="@+id/linear_what_is">
                    </LinearLayout>
                    <TextView
                        android:id="@+id/result_of"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textColor="#CFB53B"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_considentyline_height"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_result_of"
                        android:padding="5dp"
                        android:orientation="vertical">

                    </LinearLayout>
                    <TextView
                        android:id="@+id/how_adjust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textColor="#CFB53B"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_considentyline_height"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_how_adjust"
                        android:padding="5dp"
                        android:orientation="vertical">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="饮食宜忌"
                        android:layout_marginTop="5dp"
                        android:textColor="#CFB53B"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_considentyline_height"
                        android:background="@color/light_grey"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_food"
                        android:padding="5dp"
                        android:orientation="vertical">

                    </LinearLayout>



                </LinearLayout>
            </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:text="养生建议"/>
</RelativeLayout>