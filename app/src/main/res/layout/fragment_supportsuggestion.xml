<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.njucm.cmdh.app.fragments.myhealthy.MycontitutehistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#DCDCDC"
        android:id="@+id/liner"
        >
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:textAlignment="center"

            android:text="请选择你爱好的运动(可多选)"

            android:textSize="20sp"

            android:layout_gravity="center"

        />

    </LinearLayout>

     <ListView android:id="@android:id/list" android:layout_width="wrap_content"

        android:background="@color/white"

        android:layout_gravity="center"

        android:layout_height="match_parent"

        android:layout_below="@+id/liner"

        android:layout_above="@+id/below"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="90dp"

        android:layout_alignParentBottom="true"

        android:background="#DCDCDC"

        android:id="@+id/below"

        >

        <Button
            android:layout_width="wrap_content"

            android:layout_height="45dp"

            android:id="@+id/chongxinxuanze"

            android:layout_centerVertical="true"

            android:background="@drawable/sharp"

            android:layout_marginLeft="30dp"

            android:textColor="@color/white"

            android:text="重新选择"/>
        <Button

            android:layout_width="wrap_content"

            android:id="@+id/xiayibu"

            android:layout_height="45dp"

            android:layout_centerVertical="true"

            android:layout_alignParentRight="true"

            android:layout_marginRight="30dp"

            android:background="@drawable/sharp"

            android:textColor="@color/white"

            android:text="下一步"/>

    </RelativeLayout>
</RelativeLayout>

