<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/myconstitution_list_item_selector"
    android:padding="5dip">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip">
        <ImageView
            android:id="@+id/historyimg"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/pinghe2" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:background="@drawable/myconstitution_list_item_selector">
            <!--<TextView-->
            <!--android:id="@+id/historytitle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/black"-->
            <!--android:text="您的体质是："-->
            <!--android:textSize="22sp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--/>-->


            <TextView
                android:id="@+id/historyintro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/dark_gray_bg"
                android:text="哈哈我的体质是阳虚质"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:id="@+id/myconstitutiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/historyintro"
                android:text="2012年3月22日 18点45分22秒"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/historyintro" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/news_item_arrow"
        android:layout_width="20sp"
        android:layout_height="20dp"
        android:layout_marginRight="10dip"
        android:src="@drawable/arrowarrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>